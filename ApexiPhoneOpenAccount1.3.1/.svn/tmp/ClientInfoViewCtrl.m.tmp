                 ZY_UPLOAD_JBZL,
                 XL_UPLOAD_JBZL ,
                 nil];
    
    if([SJKHEngine Instance]->jbzl_user_datas.count == 0){
        for (int i=0; i<fieldNames.count;i++) {
            [[SJKHEngine Instance]->jbzl_user_datas addObject:@""];
        }
