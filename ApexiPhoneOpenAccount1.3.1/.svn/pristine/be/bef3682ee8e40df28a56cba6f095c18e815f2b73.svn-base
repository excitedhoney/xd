- (BOOL) judgeInWebViewStack:(NSString *)url{
    BOOL isExist = NO;
    for (NSString * subUrl in urlStacks) {
        if([url isEqualToString:subUrl]){
            isExist = YES;
            break;
        }
    }
    
    return isExist;
}

